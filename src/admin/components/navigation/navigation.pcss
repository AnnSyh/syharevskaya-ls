.nav-component {
    background-color: #fff;
}

.nav-component__list {
    display: flex;
}

.nav-component__link {
    padding: 30px;
    font-size: 16px;
    font-weight: 600;
    display: block;
    text-decoration: none;
    @media(max-width:480px){
        padding: 15px 10px;
    }
}
.active,
//.router-link-active,
.nav-component__link:hover {
    color: #383bcf;
    position: relative;

    &:after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: #383bcf;
    }
}
