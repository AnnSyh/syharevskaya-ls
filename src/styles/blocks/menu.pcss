.menu {
  &--color-white {
    color: #fff;
  }
}

.menu__list {
  display: flex;
  justify-content: center;
}

.menu__item {
  margin-right: 8%;

  &:last-child {
    margin-right: 0;
  }
}

.menu__link {
  text-decoration: none;
  white-space: nowrap;
  transition: .4s;

  &:hover {
    color: $menu-link-hover;
    border-bottom: 3px solid $menu-link-hover;;
  }
}
